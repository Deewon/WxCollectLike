<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_main_background"
        android:orientation="vertical">
        <include layout="@layout/layout_title"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/white">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@mipmap/default_avator" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/user_image"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@+id/user_image"
                android:text="马俊"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/wxid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/username"
                android:layout_below="@id/username"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@id/user_image"
                android:text="微信号：majunfree"
                android:textColor="@color/text_gray"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/wxnickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/username"
                android:layout_below="@id/wxid"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toRightOf="@id/user_image"
                android:text="昵称：马伯恩"
                android:textColor="@color/text_gray"
                android:textSize="11sp" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:text="设置备注和标签"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_standar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:text="地区"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_standar" />

                <TextView
                    android:id="@+id/userAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_666"
                    android:textSize="@dimen/sp_14"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/app_main_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:text="个人相册"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_standar" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/app_main_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_standar" />
        </LinearLayout>

        <TextView
            android:id="@+id/sendmessage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/corner_btn_green_background"
            android:gravity="center"
            android:text="发 消 息"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xlarge" />

        <TextView
            android:id="@+id/sendvideo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/corner_btn_white_background"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:text="视频通话"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_xlarge" />


    </LinearLayout>
</ScrollView>